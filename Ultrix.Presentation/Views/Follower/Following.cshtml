@model FollowerDto

<li class="collection-item avatar">
    <img src="~/images/default_user.jpg" alt="user image" class="circle">
    <span class="title">@Model.User.UserName</span>
    <p>
        Likes memes!
        <br>
    </p>
    @if (Model.IsFollowed)
    {
        <form class="col s1" method="post" id='@(Model.UserId + "UnFollowForm")'>
            <input type="hidden" id="FollowerId" name="FollowerId" value="@Model.UserId" />
            <i class="material-icons" onclick="unFollow('@(Model.UserId + "UnFollowForm")')">remove_circle</i>
        </form>
    }
    else
    {
        <form class="col s1" method="post" id='@(Model.UserId + "FollowForm")'>
            <input type="hidden" id="UserId" name="UserId" value="@Model.UserId" />
            <i class="material-icons" onclick="follow('@(Model.UserId + "FollowForm")')">person_add</i>
        </form>
    }
</li>